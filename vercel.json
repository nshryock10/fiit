{
  "version": 2,
  "builds": [
    {
      "src": "/backend/app2.js",
      "use": "@vercel/node"
    },
    {
      "src": "/(.*)",
      "use": "@vercel/static"
    },
    {
      "src": "./src/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/backend/app2.js" 
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}